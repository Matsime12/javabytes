@{
    ViewBag.Title = "Home Page";
}

<div id="slideShow" class="carousel slide" data-ride="carousel" style="margin-top:-15px">
    <ol class="carousel-indicators">
        <li data-target="#slideShow" data-slide-to="0" class="active"></li>
        <li data-target="#slideShow" data-slide-to="1"></li>
        <li data-target="#slideShow" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner crop" role="listbox">
        <div class="item active">
            <img src="~/Content/Images/img1.jpg" />
        </div>
        <div class="item">
            <img src="~/Content/Images/img2.jpg" />
        </div>
        <div class="item">
            <img src="~/Content/Images/img3.jpg" />
        </div>
    </div>

    <a class="left carousel-control" href="#slideShow" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>

    <a class="right carousel-control" href="#slideShow" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>The Daily Buzz</h2>
        <p>
            The Daily Buzz has a great selection of both hot and cold drinks, as well as a selection of simple sandwhiches and snacks - perfect for a quick snack to get you through the day.
        </p>
        <p>@Html.ActionLink("Place Order", "SelectVendor", "Vendors", new { id = 1 }, new { @class = "btn btn-primary", @style = "color:white" })</p>
    </div>
    <div class="col-md-4">
        <h2>Vida</h2>
        <p>Vida is in here solely for testing purposes. There are no plans to contact Vida and include them in the development process as yet.</p>
        <p>@Html.ActionLink("Place Order", "SelectVendor", "Vendors", new { id = 2 }, new { @class = "btn btn-primary", @style = "color:white" })</p>
    </div>

</div>