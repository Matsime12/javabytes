@{
    ViewBag.Title = "Home Page";
}

<div id="slideShow" class="carousel slide" data-ride="carousel" style="margin-top:-15px">
    <ol class="carousel-indicators">
        <li data-target="#slideShow" data-slide-to="0" class="active"></li>
        <li data-target="#slideShow" data-slide-to="1"></li>
        <li data-target="#slideShow" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner crop" role="listbox">
        <div class="item active">
            <img src="~/Content/Images/img1.jpg" />
        </div>
        <div class="item">
            <img src="~/Content/Images/img2.jpg" />
        </div>
        <div class="item">
            <img src="~/Content/Images/img3.jpg" />
        </div>
    </div>

    <a class="left carousel-control" href="#slideShow" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>

    <a class="right carousel-control" href="#slideShow" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-sm-4">
        <h2>The Daily Buzz</h2>
        <a class="crop-logo"  href="@Url.Action("SelectVendor", "Vendors", new { id = 1 })">
            <img src='@Url.Content("~/Content/Images/logo/buzz.jpg")' />
        </a>
    </div>
    <div class="col-sm-4">
        <h2>Vida</h2>
        <a class="crop-logo" href="@Url.Action("SelectVendor", "Vendors", new { id = 2 })">
            <img src='@Url.Content("~/Content/Images/logo/vida.jpg")' />
        </a>
    </div>
    <div class="col-sm-4">
        <h2>Gabbiano</h2>
        <a class="crop-logo"  href="@Url.Action("SelectVendor", "Vendors", new { id = 3 })">
            <img src='@Url.Content("~/Content/Images/logo/gabbiano.jpg")' />
        </a>
    </div>
</div>